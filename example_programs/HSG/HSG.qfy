method HSGParent(q : Q[n], p : Q[n], n:nat, f : [Bool] -> [Bool], h: [nat], r:nat) returns (ker: [nat])

{
  ker := [];
  for j in [0,log(2^n)) // |G| iterations
  {
    y, p, k := HSG(q, p, n, f,h, r);
    ker := ker + k;
  }
}
