//Simple Bell Pair
method BellPair(q : Q[2])
  requires { q[0, 2) : nor ↦ ⊗ i ∈ [0, 2) . |0⟩ }
  ensures  { q[0, 2) : en ↦ ∑ j ∈ [0, 2) . 1/sqrt(2) . ⊗ i ∈ [0, 2) . |j⟩ }
{
  q[0] *= H;
  //assert { q [0] : had ↦ |+⟩ };
  if (q[0]) { 
    q[1] *= λ (x => |(x + 1) % 2 ⟩); 
    } //can be remove the % 2, since q[1] is one qubit, why the type checking cannot infer that the % 2 is unnecessary
}
